{
  "name": "react-ward",
  "version": "0.0.2",
  "description": "React Webpack boilerplate",
  "author": "Ward Oosterlijnck",
  "keywords": [
    "react",
    "webpack"
  ],
  "scripts": {
    "develop": "cross-env NODE_ENV=development webpack-dev-server --host=0.0.0.0 --open",
    "build": "cross-env NODE_ENV=production webpack",
    "prestart": "npm run build",
    "start": "serve build --single --cache 1",
    "lint:js": "eslint src --fix",
    "lint:css": "stylefmt --config .stylelintrc --recursive src/**/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "test": "jest --config=.jestrc --watchAll",
    "precoverage": "jest --config=.jestrc --coverage",
    "coverage": "open coverage/index.html"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^3.2.4",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^2.1.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "null-loader": "^0.1.1",
    "postcss-loader": "^1.3.3",
    "postcss-reporter": "^3.0.0",
    "serve": "^5.0.4",
    "style-loader": "^0.15.0",
    "stylefmt": "^5.3.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
